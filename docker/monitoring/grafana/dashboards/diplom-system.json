{
  "dashboard": {
    "id": null,
    "title": "Diplom Distributed System - Load Testing Dashboard",
    "tags": ["diplom", "load-testing", "performance"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m]) * 60",
            "legendFormat": "Requests/min"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency (ms)"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "Error Rate (%)"
          },
          {
            "expr": "sum(queue_current_size)",
            "legendFormat": "Queue Size"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m]) * 60",
            "legendFormat": "{{job}} - {{method}} {{status}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per minute",
            "min": 0
          }
        ],
        "legend": {
          "alignAsTable": true,
          "rightSide": true,
          "values": true,
          "current": true,
          "max": true,
          "min": true,
          "avg": true
        }
      },
      {
        "id": 3,
        "title": "Response Time Distribution",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "label": "Response time (ms)",
            "min": 0
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "name": "Load Test Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(up[1m]) > 0",
          "iconColor": "rgba(255, 96, 96, 1)",
          "tags": ["load-test"],
          "textFormat": "Service {{instance}} state changed",
          "titleFormat": "Service State Change"
        }
      ]
    },
    "schemaVersion": 30,
    "version": 1,
    "links": [
      {
        "title": "Prometheus",
        "url": "http://localhost:9090",
        "type": "link"
      },
      {
        "title": "AlertManager",
        "url": "http://localhost:9093",
        "type": "link"
      }
    ]
  }
} 